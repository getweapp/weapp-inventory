@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  margin-bottom: 100px;
} 

.inventory {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.inventoryitem {
  width: 42%;
  margin: 5px;
  border: 2px solid #eff;
  border-radius: 15px;
  background-color: #fff;
  box-shadow: 1px 1px 1px #ccc;
}

.pic {
  height: 120px;
  width: 100%;
}

.description {
  margin: 10px 10px;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  color: #858DFF;
}

